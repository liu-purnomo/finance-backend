{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["ES5", "ES6", "DOM", "ES2022"],
    "rootDir": "./src",
    "declaration": true,
    "moduleResolution": "Node",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true
  }
}
